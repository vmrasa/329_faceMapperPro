<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.iastate.ing_inc.face_mapper_pro.RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register to FaceMapper"
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Username"
        android:id="@+id/tv_username"
        android:layout_alignTop="@+id/et_username"
        android:layout_alignParentLeft="true"
        android:textSize="15dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:id="@+id/et_username"
        android:hint="Username"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:textSize="15dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_password"
        android:hint="Password"
        android:layout_alignLeft="@+id/et_username"
        android:layout_below="@+id/et_username"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Password"
        android:id="@+id/tv_password"
        android:layout_alignTop="@+id/et_password"
        android:layout_alignRight="@+id/tv_username"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="124dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Confirm Password"
        android:id="@+id/tv_confirm_password"
        android:layout_alignTop="@+id/et_confirm_password"
        android:layout_alignRight="@+id/tv_username"
        android:textSize="15dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_confirm_password"
        android:hint="Repeat Password"
        android:layout_alignLeft="@+id/et_password"
        android:layout_below="@+id/et_password"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Select Classes"
        android:layout_below="@+id/et_confirm_password"
        android:id="@+id/class_label"
        android:textColor="#000000"
        android:textSize="15dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/class_label"
        android:id="@+id/cb_cs309"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Com Sci 309"
        android:layout_alignTop="@+id/cb_cs309"
        android:layout_toRightOf="@+id/cb_cs309"
        android:layout_marginLeft="15dp"
        android:textColor="#000000" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_cs309"
        android:id="@+id/cb_cs311"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Com Sci 311"
        android:layout_alignTop="@+id/cb_cs311"
        android:layout_toRightOf="@+id/cb_cs311"
        android:layout_marginLeft="15dp"
        android:textColor="#000000" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_cs311"
        android:id="@+id/cb_cs329"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Com Sci 329"
        android:layout_alignTop="@+id/cb_cs329"
        android:layout_toRightOf="@+id/cb_cs329"
        android:layout_marginLeft="15dp"
        android:textColor="#000000" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_cs329"
        android:id="@+id/cb_cs330"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Com Sci 330"
        android:layout_alignTop="@+id/cb_cs330"
        android:layout_toRightOf="@+id/cb_cs330"
        android:layout_marginLeft="15dp"
        android:textColor="#000000" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_cs330"
        android:id="@+id/cb_cs339"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Com Sci 339"
        android:layout_alignTop="@+id/cb_cs339"
        android:layout_toRightOf="@+id/cb_cs339"
        android:layout_marginLeft="15dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Register"
        android:id="@+id/register"
        android:layout_alignTop="@+id/btn_pictures"
        android:layout_alignParentRight="true"
        android:textSize="13dp"
        android:onClick="onRegisterClick"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Take 3 Pictures"
        android:id="@+id/btn_pictures"
        android:layout_below="@+id/cb_cs339"
        android:layout_alignParentLeft="true"
        android:textSize="13dp"
        android:onClick="onTakePictureCick"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:textColor="#000000"
        android:id="@+id/register_error"
        android:layout_below="@+id/register"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
